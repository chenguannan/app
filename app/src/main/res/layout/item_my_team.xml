<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/x10"
    android:layout_marginTop="@dimen/x10"
    android:layout_marginEnd="@dimen/x10"
    android:background="@drawable/circle_white_bg"
    android:padding="@dimen/x10">

    <ImageView
        android:id="@+id/img_item_my_team_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x10"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tv_item_my_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_item_my_team_icon"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/s18"/>

    <TextView
        android:id="@+id/tv_item_my_team_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_item_my_team_level"
        android:layout_alignBaseline="@+id/tv_item_my_team_name"
        android:layout_marginStart="@dimen/x10"
        android:layout_toEndOf="@+id/tv_item_my_team_name"
        android:textColor="@color/grayColor_6"
        android:textSize="@dimen/s16"/>

    <TextView
        android:id="@+id/tv_item_my_team_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_item_my_team_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/x10"
        android:textColor="@color/grayColor_6"
        android:textSize="@dimen/s16"/>

    <TextView
        android:id="@+id/tv_item_my_team_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_my_team_name"
        android:layout_marginTop="@dimen/y10"
        android:layout_toEndOf="@+id/img_item_my_team_icon"
        android:textColor="@color/grayColor_6"
        android:textSize="@dimen/s16"/>

    <TextView
        android:id="@+id/tv_item_my_team_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_my_team_level"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/y10"
        android:textSize="@dimen/s16"/>
</RelativeLayout>