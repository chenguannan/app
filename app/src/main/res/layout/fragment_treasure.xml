<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/gather_top_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/x20"
        android:paddingEnd="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_extract"
            android:textColor="@color/whiteColor_alpha_7"
            android:textSize="@dimen/s16"/>

        <TextView
            android:id="@+id/tv_treasure_can_extract_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/s30"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_treasure_apply_extract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:drawableStart="@mipmap/performance_extract_icon"
        android:drawableEnd="@mipmap/big_arrow"
        android:drawablePadding="@dimen/x10"
        android:padding="@dimen/x10"
        android:text="@string/apply_extract"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:background="@drawable/circle_white_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_treasure_all_earning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/x20"
                        android:paddingTop="@dimen/y15"
                        android:paddingEnd="@dimen/x20"
                        android:paddingBottom="@dimen/y15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/performance_direct_promoter_icon"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/all_earning"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/s14"/>

                        <TextView
                            android:id="@+id/tv_treasure_all_eraning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            android:gravity="center"
                            android:textSize="@dimen/s20"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/y10"
                        android:background="@color/grayColor_line_E5"/>

                    <LinearLayout
                        android:id="@+id/ll_treasure_all_extract"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/x20"
                        android:paddingTop="@dimen/y15"
                        android:paddingEnd="@dimen/x20"
                        android:paddingBottom="@dimen/y15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/yj_txicon"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/all_extract"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/s14"/>

                        <TextView
                            android:id="@+id/tv_treasure_all_extract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            android:gravity="center"
                            android:textSize="@dimen/s20"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_marginEnd="@dimen/x10"
                    android:background="@color/grayColor_line_E5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_treasure_deal_brokerage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/x20"
                        android:paddingTop="@dimen/y15"
                        android:paddingEnd="@dimen/x20"
                        android:paddingBottom="@dimen/y15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/performance_deal_brokerage_icon"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/deal_brokerage"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/s14"/>

                        <TextView
                            android:id="@+id/tv_treasure_deal_brokerage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            android:gravity="center"
                            android:textSize="@dimen/s20"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/y10"
                        android:background="@color/grayColor_line_E5"/>

                    <LinearLayout
                        android:id="@+id/ll_treasure_upvip_brokerage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/x20"
                        android:paddingTop="@dimen/y15"
                        android:paddingEnd="@dimen/x20"
                        android:paddingBottom="@dimen/y15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/vip"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/up_vip_brokerage"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/s14"/>

                        <TextView
                            android:id="@+id/tv_treasure_upvip_brokerage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            android:gravity="center"
                            android:textSize="@dimen/s20"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:background="@mipmap/performance_policy_bg">

                <ImageView
                    android:id="@+id/img_treasure_policy_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x10"
                    android:src="@mipmap/performance_policy_left_icon"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img_treasure_policy_left"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/performance_policy_right_icon"
                        tools:ignore="ContentDescription"/>

                    <ImageView
                        android:id="@+id/img_treasure_policy_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y10"
                        android:src="@mipmap/performance_policy_look_icon"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>