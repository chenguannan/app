<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10">

        <TextView
            android:id="@+id/tv_pay_password_forget"
            style="@style/tv_safe_set"
            android:background="@color/whiteColor"
            android:text="@string/forget_pay_password"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/grayColor_line_E5"/>


        <TextView
            android:id="@+id/tv_pay_password_change"
            style="@style/tv_safe_set"
            android:background="@color/whiteColor"
            android:text="@string/change_pay_password"/>
    </LinearLayout>

</LinearLayout>